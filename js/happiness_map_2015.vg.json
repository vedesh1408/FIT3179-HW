{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness Index of Countries in 2015",
  "width": "container",
  "height": "container",
  "projection": 
  {
    "type": "equalEarth"
  },
  
  
  "data": {
    "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179-HW/main/js/WorldMapWithGraticules.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  

  "layer":
  [
    {
      "transform": 
      [ 
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "flag"}
      ],

      "mark": 
      {
        "type": "geoshape", 
        "fill": "lightgray", 
        "stroke": "white"
      },

      "encoding": 
      {
        "tooltip": 
        {
          "field": "flag"
        }
      }
    },
    
  
    {
      "transform": 
      [
        {
          "lookup": "properties.NAME",
          "from": 
          {
            "data": 
            {
              "url": "https://raw.githubusercontent.com/vedesh1408/FIT3179-HW/main/data/2015.csv"
            },
            "key": "Country",
            "fields": ["Score"]
          }
        }
      ],

      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": 
      {
        "color": 
        {
          "field": "Score",
          "type": "quantitative",
          "scale": 
          {
            "type": "threshold",
            "domain": [2,3,4,5,6,7],
            "range": ["#A52A2A", "#FF0000","#FF4500","#FFA500","#FFD700","#ADFF2F","#006400"] 
          } 
        },
        "tooltip": 
        [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative"}
        ]
      }
    }
  ]
}